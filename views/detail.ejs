<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User and Payment Details</title>
  <link rel="stylesheet" href="/css/userDetail.css" />
</head>
<body>
  <!-- Header Navigation -->
  <header class="header-nav">
    <h1>User and Payment Details</h1>
  </header>
  <!-- Main Content Container -->
  <div class="user-detail-container">
    <!-- User Details Section -->
    <h2>User Details</h2>
    <% if (user && user.entries && user.entries.length > 0) { %>
      <% user.entries.forEach((entry, index) => { %>
        <div class="card">
          <h3>User Information - <%= index + 1 %></h3>
          <p><strong>shop Name:</strong> <%= entry.shopName %></p>
          <p><strong>board Size:</strong> <%= entry.boardSize %></p>
          <p><strong>lapu Number:</strong> <%= entry.lapuNumber %></p>
          <p><strong>Submitted At:</strong> <%= new Date(entry.submittedAt).toLocaleString() %></p>
        </div>
      <% }); %>
    <% } else { %>
      <p>No User Data Found</p>
    <% } %>

    <a href="/api/device/dashboard">
      <button class="dashboard-btn">Go to Dashboard</button>
    </a>
  </div>
</body>
</html>
